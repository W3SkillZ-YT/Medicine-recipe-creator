<Window x:Class="MedizinRezeptErsteller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medizin Rezept Ersteller" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="txtName"/>
            <TextBlock Text="Medikament Name:"/>
            <TextBox x:Name="txtMedikamentName"/>
            <TextBlock Text="Symptome:"/>
            <TextBox x:Name="txtSymptome"/>
            <TextBlock Text="Mögliche Erkrankung:"/>
            <TextBox x:Name="txtErkrankung"/>
            <TextBlock Text="Überweisung (Arzt):"/>
            <TextBox x:Name="txtUeberweisung"/>
            <TextBlock Text="Arzt Name:"/>
            <TextBox x:Name="txtArztName"/>
            <Button Content="Generate" Click="GenerateButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

